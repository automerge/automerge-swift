            },
            {
              "definition" : {
                "content" : [
                  {
                    "inlineContent" : [
                      {
                        "code" : "https:\/\/automerge.org\/",
                        "type" : "codeVoice"
                      }
                    ],
                    "type" : "paragraph"
                  }
                ]
              },
              "term" : {
                "inlineContent" : [
                  {
                    "text" : "Reference URL",
                    "type" : "text"
                  }
                ]
              }
            }
          ],
          "type" : "termList"
        },
        {
          "inlineContent" : [
            {
              "text" : "If you are editing the ",
              "type" : "text"
            },
            {
              "code" : "Info.plist",
              "type" : "codeVoice"
            },
            {
              "text" : " file directly, the following stanza reflects a single imported type declaration declaring this type:",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "code" : [
            "<key>UTImportedTypeDeclarations<\/key>",
            "<array>",
            "    <dict>",
            "        <key>UTTypeConformsTo<\/key>",
            "        <array>",
            "            <string>public.data<\/string>",
            "        <\/array>",
            "        <key>UTTypeDescription<\/key>",
            "        <string>Automerge document<\/string>",
            "        <key>UTTypeIcons<\/key>",
            "        <dict\/>",
            "            <key>UTTypeIdentifier<\/key>",
            "            <string>com.github.automerge<\/string>",
            "            <key>UTTypeReferenceURL<\/key>",
            "            <string>https:\/\/automerge.org\/<\/string>",
            "            <key>UTTypeTagSpecification<\/key>",
            "        <dict\/>",
            "    <\/dict>",
            "<\/array>"
          ],
          "syntax" : "plist",
          "type" : "codeListing"
        },
        {
          "anchor" : "Saving-and-loading-Documents",
          "level" : 3,
          "text" : "Saving and loading Documents",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "text" : "Use ",
              "type" : "text"
            },
            {
              "identifier" : "doc:\/\/com.github.automerge.automerge-swift\/documentation\/Automerge\/Document\/save()",
              "isActive" : true,
              "type" : "reference"
            },
            {
              "text" : " to generate ",
              "type" : "text"
            },
            {
              "code" : "Data",
              "type" : "codeVoice"
            },
            {
              "text" : " that represents a compacted version of the Automerge document.",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "Calling ",
              "type" : "text"
            },
            {
              "code" : "save",
              "type" : "codeVoice"
            },
            {
              "text" : " collapses concurrent changes applied since the last save, or when the document was loaded.",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "The compressed encoding of the document which is efficient and can be used to initialize an Automerge document with ",
              "type" : "text"
            },
            {
              "identifier" : "doc:\/\/com.github.automerge.automerge-swift\/documentation\/Automerge\/Document\/init(_:logLevel:)",
              "isActive" : true,
              "type" : "reference"
            },
            {
              "text" : ".",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "inlineContent" : [
            {
              "text" : "The Automerge core library is intentionally agnostic to how you transfer, store, or load the bytes that make up an Automerge document, or updates between documents.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        }
      ],
